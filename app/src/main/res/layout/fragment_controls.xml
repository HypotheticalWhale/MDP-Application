<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controls">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/send_arena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEND ARENA INFO" />

            <Button
                android:id="@+id/s_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STRAFE RIGHT" />

            <Button
                android:id="@+id/s_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STRAFE LEFT" />

            <Button
                android:id="@+id/forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FORWARD" />

            <Button
                android:id="@+id/reverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REVERSE" />

            <Button
                android:id="@+id/r_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ROTATE LEFT" />

            <Button
                android:id="@+id/r_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ROTATE RIGHT" />

            <Button
                android:id="@+id/explore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BEGIN EXPLORATION" />


            <Button
                android:id="@+id/fastest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BEGIN FASTEST PATH" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>